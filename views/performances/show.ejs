<%- include('../partials/header') %>
<div>Title: <%= performance.title %> </div>
<div>Soloist: <%= performance.soloist %> </div>
<div>Concert Hall: <%= performance.concertHall %> </div>
<div>Date: <%= performance.performanceDate %> </div>
</form>
<% if(user)%>
<br><br><h2>Reviews</h2>
<form id="add-review-form" method="POST"
  action="/performances/<%=  performance._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5" selected>5</option>

  <input type="submit" value="Add Review">
</form>
<% if (performance.reviews.length) { %>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
          <th>Review</th>
          <th>Rating</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %>
        <% performance.reviews.forEach(function(r) { %>
          <% total += r.rating %>
          <tr>
            <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
            <td>
              <% if (user?._id.equals(r.user)) { %>
                <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST" style="display: inline;">
                    <button type="submit">X</button>
                </form>
                <a href="/reviews/edit/<%= r._id %>">Edit</a>
              <% } %>
            </td>
           
          </tr>
        <% }); %>
        <tr>
          <td colspan="3"></td>
          <td><strong><%= (total / performance.reviews.length).toFixed(1) %></strong></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>
    
<%- include('../partials/footer') %>
